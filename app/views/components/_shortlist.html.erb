<div class="shortlist-recipient-card">
  <div class="shortlist-recipient-card-info">
      <h2><%= shortlist.recipient_name %></h2>
        <% shortlist.gifts.each do |gift | %>
        <img class="shortlist-image-gift" src=<%= gift.image %> alt= <%= gift.title %>>
        <% end %>
        </ul>
    </div>
  <div class="shortlist-delete-edit">
    <ul class="list-inline">
      <li class="list-inline-item"><%= link_to '🗑️', shortlist_path(shortlist), method: :delete %></li>
      <li class="list-inline-item"><%= link_to '✏️', edit_shortlist_path(shortlist) %></li>
    </ul>
  </div>
</div>
