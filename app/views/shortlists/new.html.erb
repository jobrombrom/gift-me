<style>
body {background-color: #FFE2E2;}
</style>

<div class="container">
  <h1>Welcome to</h1>
  <h1>Gift.me</h1>
  <p>Who are you gifting today?</p>
</div>

 <div class="container">
  <%= simple_form_for [@shortlist] do |f|%>
    <%= f.input :recipient_name %>
    <%= f.input :interest, as: :check_boxes, collection: [
    "Pet Supplies",
    "Clothing",
    "Home & Living",
    "Jewelry",
    "Art & Collectibles",
    "Bags & Purses",
    "Craft Supplies & Tools",
    "Electronics & Accessories",
    "Accessories",
    "Books, Movies & Music",
    "Weddings",
    "Shoes",
    "Toys & Games",
    "Bath & Beauty",
    "Paper & Party Supplies"
    ] %>
    <%= f.submit %>
  <% end %>
</div>

<div class="">
  <%= image_tag("Background_homepage.jpg", width: '100%')%>
</div>
