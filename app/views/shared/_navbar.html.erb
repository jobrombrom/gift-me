<div class="d-flex justify-content-betweennavbar navbar-expand-sm navbar-light navbar-lewagon">

 <div class="p-2 m-2 ml-3 pl-2">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "Logo.png", class: "navbar-logo" %>
  <% end %>
  </div>

  <div class="collapse navbar-collapse p-2 m-2 mr-3 pr-2">
    <ul class="navbar-nav mr-auto">

      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <i class="fas fa-user fa-lg avatar dropdown-toggle pt-2" id="navbarDropdown" data-toggle="dropdown" aria-expanded="true" aria-haspopup="true"></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Wishlists", shortlists_path(@shortlists), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>

        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>

      <% end %>
    </ul>
  </div>
</div>
