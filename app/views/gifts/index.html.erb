<div id="main-view">
  <div id="gift-main-display">
    <div class="gift-display">
      <% @gifts.each_with_index do |gift, index| %>
        <% if index == 0 %>
          <%= render 'components/gift_card', gift: gift, first: 'true' %>
        <% else %>
          <%= render 'components/gift_card', gift: gift, first: 'false' %>
        <% end %>
      <% end %>
    </div>

    <div class="pt-3 shortlist-choice row row-center">
      <a class="btn btn-info" id= "shortlist-button">Wishlist <i class="fas fa-heart"></i></a>
    </div>
  </div>


  <img src="https://i0.wp.com/freepngimages.com/wp-content/uploads/2019/06/open-scissors.png?fit=1000%2C1000" id="scissors">
  <img id = "ribbon" src="https://lh3.googleusercontent.com/proxy/MTss0ElhOmht-4nIE2_OQWsxraISUbYARxv-JdD02lXkxlqJyIygT_Eqp8W9gZToDBUuTxTpLDjLjVbqJRRe9JxlPLY8nm3QaOkW1JaxJ6bwta6KA4rzzJuY8usM8TjNhkN-_ek" alt="">



  <div id="shortlist-display" class = "container list-container" hidden>
    <div class="mt-3 pt-3 shortlist-choice row row-center">
      <a class="btn btn-info" id= "gifts-button">Keep Looking <i class="fas fa-search"></i></a>
    </div>
    <div id = "shortlisted-gifts">
      <% @shortlist.session_gifts.each do |session_gift| %>
        <div> <%= render 'components/shortlist_card', session_gift: session_gift %></div>
      <% end %>
    </div>
  </div>

</div>



<%= javascript_pack_tag 'shortlist_swipe.js' %>
