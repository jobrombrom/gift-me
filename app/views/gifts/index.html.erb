<div class="container" height="100%"; >

  <h1 class="d-flex justify-content-center">Gift.me</h1>
  <p class="d-flex justify-content-center">Find the perfect pressie for <%= @shortlist.recipient_name.capitalize %></p>


  <div id="gifts-listing">
    <% @gifts.each_with_index do |gift, index| %>
      <% if index == 0 %>
        <div class="row row-center" id="gift-<%= gift.id %>">
          <div class="col-4 gift-choice gift-reject">
            <%= link_to "Reject",
            shortlist_session_gifts_path(@shortlist, gift_id: gift.id , added: 'false'), method: :post, remote: true, class: "btn btn-danger" %>
          </div>

          <div class="col-4">
            <%= render 'components/card', gift: gift %>
          </div>

          <div class="col-4 gift-choice gift-add">
            <%= link_to "Add",
              shortlist_session_gifts_path(@shortlist, gift_id: gift.id , added: 'true'), method: :post, remote: true, class: "btn btn-success"  %>
          </div>
        </div>
      <% else %>
        <div class="row row-center" id="gift-<%= gift.id %>" hidden >

          <div class="col-4 gift-choice gift-reject">
            <%= link_to "Reject",
              shortlist_session_gifts_path(@shortlist, gift_id: gift.id , added: 'false'), method: :post, remote: true,  class: "btn btn-danger" %>
          </div>

          <div class="col-4">
            <%= render 'components/card', gift: gift %>
          </div>

          <div class="col-4 gift-choice gift-add">
            <%= link_to "Add",
              shortlist_session_gifts_path(@shortlist, gift_id: gift.id , added: 'true'), method: :post, remote: true, class: "btn btn-success"  %>
          </div>
        </div>

      <% end %>
    <% end %>

    <div class="mt-3 pt-3 shortlist-choice row row-center">
      <a class="btn btn-info" id= "shortlist-button">Shortlist</a>
    </div>

  </div>

<div id="shortlisted-gifts" class = "container list-container" hidden>
  <div class="mt-3 pt-3 shortlist-choice row row-center">
    <a class="btn btn-info" id= "gifts-button">Keep Looking</a>
  </div>
  <% @shortlist.gifts.each do |gift| %>
    <%= render 'components/card_horizontal', gift: gift %>
  <% end %>
</div>


<%= javascript_pack_tag 'shortlist_swipe.js' %>
